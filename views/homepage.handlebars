<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Homepage</title>
    <link rel="stylesheet" href="../public/css/style.css" />
  </head>
  <body>
    <header>
      {{!-- <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <li>
            {{#if user}}
              <a href="/api/dashboard">Dashboard</a>
            {{else}}
